@page "/Productos"
<h1>Registrar productos</h1>

<th class="btn btn-primary" @onclick="Regreso">Regresar</th>
<br>

<div class="row mt-2">
    <div class="col">
        <div class="form-group">
            <label for="Txtproducto">Producto</label>
            <input class="form-control" type="text" name="Txtproducto" id="Txtproducto">
        </div>
    </div>
    <div class="col ">
        <div class="form-group">
            <label for="txtApellido">Codigo</label>
            <input class="form-control" type="text" name="txtApellido" id="txtApellido">
        </div>
    </div>
    <div class="col ">
        <div class="form-group">
            <label for="Txtcosto">Costo</label>
            <input class="form-control" type="text" name="Txtcosto" id="Txtcosto">
        </div>
    </div>
    <div class="col ">
        <div class="form-group">
            <label for="Txtnombre">Nombre</label>
            <input class="form-control" type="text" name="Txtnombre" id="Txtnombre">
        </div>
    </div>
    <div class="col ">
        <div class="form-group">
            <label for="TxtCantidad">Cantidad</label>
            <input class="form-control" type="text" name="TxtCantidad" id="TxtCantidad">
        </div>
    </div>
</div>
<button class="btn btn-primary">Enviar</button>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre </th>
            <th>Codigo</th>
            <th>Costo</th>
            <th>Cantidad</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>

    </tbody>
</table>

@code {
    public void Regreso()
    {

        Cambio.NavigateTo("/Vista");

    }
}